{
    "extends": "airbnb",
    "plugins": [
        "import"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": 0,
        "no-multi-spaces": 0,
        "key-spacing": 0,
        "indent": ["error", 4],
        "no-console": [
            "error",
            {
                "allow": ["warn", "error"]
            }
        ],
        "no-underscore-dangle": 0,
        "comma-dangle": 0,
        "no-useless-constructor": 0,
        "max-len": 0,
        "import/no-extraneous-dependencies": ["error", {"peerDependencies": true}]
    },
    "globals": {
        "window": true,
        "document": true,
        "HTMLElement": true,
        "expect": true,
        "CustomEvent": true
    }
}
