{
    "name": "baseui-wc-polyfills",
    "version": "0.1.0",
    "description": "Web component polyfills bundle to simplify the usage",
    "author": "Durga Prasad Sadhanala <dsadhanala@gmail.com>",
    "license": "MIT",
    "main": "dist/baseui-wc-polyfills.js",
    "module": "src/index.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/dsadhanala/baseui-wc-polyfills.git"
    },
    "scripts": {
        "clean": "./node_modules/.bin/del-cli ./dist && ./node_modules/.bin/del-cli ./coverage",
        "lint": "./node_modules/.bin/eslint src/*.js --ignore-pattern lib/*.js --quiet",
        "webpackServer": "./node_modules/.bin/webpack-dev-server --env.NODE_ENV=development --config webpack.config.js",
        "start": "npm install && npm run dev",
        "dev": "npm run clean && npm run lint && npm run webpackServer",
        "prod": "npm run clean && ./node_modules/.bin/webpack --env.NODE_ENV=production --config webpack.config.js",
        "prod-min": "./node_modules/.bin/webpack --env.NODE_ENV=production --env.min=true --config webpack.config.js",
        "release": "npm run lint && npm run prod && npm run prod-min",
        "server": "./node_modules/.bin/live-server --port=2929 --host=0.0.0.0 --open='./demo/'",
        "test": "npm run clean && karma start karma.conf.js",
        "closureMinify": "java -jar ./node_modules/google-closure-compiler/compiler.jar --js ./dist/baseui-wc-polyfills.js --js_output_file ./dist/baseui-wc-polyfills.min.js"
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.24.1",
        "chai": "^4.1.1",
        "chrome-launcher": "^0.10.2",
        "cross-env": "^5.1.3",
        "del-cli": "^1.1.0",
        "eslint": "^4.16.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.6.1",
        "google-closure-compiler": "^20180402.0.0",
        "istanbul-instrumenter-loader": "^3.0.0",
        "karma": "^2.0.2",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.1.1",
        "karma-coverage": "^1.1.1",
        "karma-firefox-launcher": "^1.1.0",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^3.0.0",
        "live-server": "^1.1.0",
        "lodash.camelcase": "^4.3.0",
        "lodash.mergewith": "^4.6.0",
        "mocha": "^5.1.1",
        "open-browser-webpack-plugin": "0.0.5",
        "uglifyjs-webpack-plugin": "^1.2.5",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.1.2",
        "webpack-dashboard": "^1.1.1",
        "webpack-dev-server": "^3.1.3"
    },
    "dependencies": {
        "@webcomponents/custom-elements": "^1.0.8",
        "@webcomponents/shadycss": "^1.1.1",
        "@webcomponents/shadydom": "^1.0.12",
        "@webcomponents/template": "^1.2.2",
        "@webcomponents/webcomponents-platform": "^1.0.0",
        "es6-promise": "^4.2.4",
        "whatwg-fetch": "^2.0.3"
    }
}
